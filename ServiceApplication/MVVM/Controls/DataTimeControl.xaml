<UserControl x:Class="ServiceApplication.MVVM.Controls.DataTimeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ServiceApplication.MVVM.Controls"
             mc:Ignorable="d" 
             >

    <!--DateTime Section-->
    <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" >
        <TextBlock Text="{Binding CurrentTime, FallbackValue=--:--}" FontSize="82" Margin="0 -25 0 0" Foreground="#f5f5f5" HorizontalAlignment="Center"/>
        <TextBlock Text="{Binding CurrentDate}" FontSize="22" Foreground="#cccccc" HorizontalAlignment="Center"/>

    </StackPanel>

</UserControl>
